<launch>
  <arg name="name"		default="a_bot_ftsensor"/>
  <arg name="publish_rate"	default="125"/>
  <!-- <arg name="controller"	default="aist_ftsensor_controller"/> -->
  <arg name="controller"	default="force_torque_sensor_controller"/>
  <arg name="hostname"		default="a_bot"/>

  <node name="a_bot_ftsensor"
        pkg="aist_ftsensor" type="ft300_driver" output="screen">
    <param name="frame_id"	value="a_bot_ftsensor_wrench_link"/>
    <param name="rate"		value="$(arg publish_rate)"/>
    <param name="hostname"	value="a_bot"/>
  </node>

  <node name="b_bot_ftsensor"
        pkg="aist_ftsensor" type="ft300_driver" output="screen">
    <param name="frame_id"	value="b_bot_ftsensor_wrench_link"/>
    <param name="rate"		value="$(arg publish_rate)"/>
    <param name="hostname"	value="b_bot"/>
  </node>

  <rosparam file="$(dirname)/../config/aist_ftsensor_controller.yaml"
  	    subst_value="true"/>
  <node name="ftsensor_controller_spawner"
        pkg="controller_manager" type="spawner" output="screen"
  	args="a_bot_ftsensor_controller b_bot_ftsensor_controller"/>

</launch>
