<?xml version="1.0" ?>
<launch>

  <arg name="config" default="aist"/>

  <!-- Start hmi_demo server -->
  <node name="hmi_server"
	pkg="aist_routines" type="hmi_server.py" output="screen">
    <remap from="/pointing"	to="/hmi_ros_bridge/pointing"/>
  </node>

  <!-- Start hmi_demo client -->
  <node name="hmi_demo"
  	pkg="aist_routines" type="hmi_demo.py" output="screen">
    <rosparam file="$(find aist_routines)/config/$(arg config)_config.yaml"/>
    <rosparam file="$(find aist_routines)/config/kitting.yaml"/>
  </node>

</launch>
